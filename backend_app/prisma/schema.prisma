generator client {
    provider = "prisma-client-js"
    output   = "./generated/client"
}

datasource sqlite_db {
    provider = "sqlite"
    url      = env("SQLITE_URL")
}

generator typegraphql {
    provider           = "typegraphql-prisma"
    output             = "./generated/type-graphql"
    emitTranspiledCode = true
}

model Users {
    id           Int       @id @default(autoincrement())
    name         String
    email        String
    user_type_id Int
    user_type    UserTypes @relation(fields: [user_type_id], references: [id])
    created_at   DateTime  @default(now())
    updated_at   DateTime  @default(now())
    deleted_at   DateTime?
}

model Admins {
    id         Int       @id @default(autoincrement())
    name       String
    email      String
    created_at DateTime  @default(now())
    updated_at DateTime  @default(now())
    deleted_at DateTime?
}

model Auth{
    id         Int       @id
    name       String
    email      String
    password   String
    created_at DateTime  @default(now())
    updated_at DateTime  @default(now())
    deleted_at DateTime?
}
model Agents {
    id         Int       @id @default(autoincrement())
    name       String
    email      String
    created_at DateTime  @default(now())
    updated_at DateTime  @default(now())
    deleted_at DateTime?
}

model UserTypes {
    id         Int       @id @default(autoincrement())
    name       String
    created_at DateTime  @default(now())
    updated_at DateTime  @default(now())
    deleted_at DateTime?
    Users      Users[]
}
